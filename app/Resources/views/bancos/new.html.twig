{% extends 'base.html.twig' %}

{% block body %}
    <div style="width: 400px">
        <h1>Añadir Banco</h1>
        {{ form_start(form) }}
        <div class="form-group">
            <label>Nombre Banco</label>
            {{ form_widget(form.nombreBanco, { 'attr': {'class': 'form-control', 'placeholder':"Nombre Banco"} }) }}
        </div>
        <div class="form-group">
            <label>Foto</label>
            {{ form_widget(form.foto_path) }}
        </div>

        <input type="submit" value="Añadir" />
        {{ form_end(form) }}

        <ul>
            <li>
                <a href="{{ path('bancos_index') }}">Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}
